import java.lang.*;

public class HelloWorld{

     public static void main(String []args){
        
        String full = "";
        
        int length = full.length();
        int strLength = 13;
        
        long max = 0;
        long product = 1;
        
        int index = 0;    // Where I start the string...
        int counter = 0;  // Number of ints being multiplied...
        
        while(index < length - strLength){
            
           product  *= Character.getNumericValue(full.charAt(index + counter));
           
           // If we hit a 0, reset! 
           if(product == 0){
             index = index + counter + 1;  // Avoids a TON of unnecessary checks by skipping the index to past the 0.
             counter = 0;
             product = 1;
           }
           else {
             if(counter == strLength - 1){ // If you've had the right number of consecutive non-zeros multiplied...
                 if(product > max){        // Check to see if it's bigger than the previous max.
                     max = product;  
                     System.out.println("Index: " + index + " / Product: " + product + "\n");
                 } 
                 product /= Character.getNumericValue(full.charAt(index));
                 index+=1;             // NOT counter++. We know we've hit the limit with the counter.  
                 
                 /* If you have the right number of characters, instead of starting over at the next index,
                 just remove the old index's worth of the product and proceed. The multiplication is like the
                 old game of "Worm" as it slides across the string. */
                 
             }
             else counter++;
           } 
        }
     }
}
